<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Create account â€¢ Multishowcase</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        referrerpolicy="no-referrer" />

  <!-- Inter font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;800&display=swap" rel="stylesheet">

  <style>
    html,body {
      font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    }
  </style>
</head>
<body class="min-h-screen bg-white">
  <div class="grid grid-cols-1 md:grid-cols-2 min-h-screen">

    <!-- LEFT: Welcome panel -->
    <section class="bg-[#1f2743] text-white px-8 md:px-12 lg:px-16 py-10 md:py-14 flex flex-col">
      <div class="max-w-xl w-full mx-auto md:ml-0">
        <div class="text-2xl font-extrabold leading-tight">
          <span class="block">Multi</span>
          <span class="block -mt-1">showcase</span>
        </div>

        <div class="mt-20 md:mt-28">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight">
            Welcome to<br/> Multishowcase
          </h1>
          <p class="mt-5 text-slate-300 max-w-md">
            Discover, share, and showcase creative works across 2D, 3D, animation, and interactive prototypes.
          </p>
        </div>

        <div class="flex justify-center items-center h-40 mt-20">
          <i class="fa-solid fa-image fa-10x"></i>
        </div>
      </div>
    </section>

    <!-- RIGHT: Create account form -->
    <section class="px-8 md:px-12 lg:px-16 py-12 md:py-16">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl md:text-3xl font-extrabold  
                   bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 
                   bg-clip-text text-transparent">
          Create your account
        </h2>
        <p class="text-slate-500 mt-2">Join the community and start showcasing your work.</p>

        <form class="mt-10 space-y-5" id="signupForm" method="post" action="/signup">
          <!-- Display Name -->
          <div>
            <label for="display_name" class="block text-sm text-slate-600 mb-1">Display Name</label>
            <input id="display_name" name="display_name" type="text"
                   class="w-full rounded-md bg-slate-100/70 border border-slate-200 focus:border-slate-400 focus:ring-0 p-3"
                   placeholder="Enter your display name" autocomplete="name">
          </div>

          <!-- Username -->
          <div>
            <label for="username" class="block text-sm text-slate-600 mb-1">Username</label>
            <input id="username" name="username" type="text"
                   class="w-full rounded-md bg-slate-100/70 border border-slate-200 focus:border-slate-400 focus:ring-0 p-3"
                   placeholder="Enter your username" autocomplete="username">
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm text-slate-600 mb-1">E-mail</label>
            <input id="email" name="email" type="email"
                   class="w-full rounded-md bg-slate-100/70 border border-slate-200 focus:border-slate-400 focus:ring-0 p-3"
                   placeholder="Type your e-mail" autocomplete="email">
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm text-slate-600 mb-1">Password</label>
            <input id="password" name="password" type="password"
                   class="w-full rounded-md bg-slate-100/70 border border-slate-200 focus:border-slate-400 focus:ring-0 p-3"
                   placeholder="Type your password" autocomplete="new-password">
            <p class="text-xs text-slate-400 mt-1">Must be at least 8 characters</p>
          </div>

          <!-- Submit -->
          <button type="submit"
                  class="w-full py-3 rounded-full text-white font-semibold shadow-sm
                         disabled:opacity-60 disabled:cursor-not-allowed
                         bg-gradient-to-r from-slate-800 to-slate-400">
            Sign Up
          </button>

          <!-- Message / errors -->
          <p id="msg" class="text-sm"></p>
        </form>

        <!-- Verify box -->
        <div id="verifyBox" class="hidden mt-8 space-y-3">
          <div class="text-slate-600">We sent a verification code to your email.</div>
          <input id="code" type="text" inputmode="numeric"
                 class="w-full rounded-md bg-slate-100/70 border border-slate-200 focus:border-slate-400 focus:ring-0 p-3"
                 placeholder="Enter 6-digit code">
          <div class="flex gap-3">
            <button id="btnVerify"
                    class="flex-1 py-3 rounded-full text-white font-semibold
                           bg-gradient-to-r from-slate-800 to-slate-400">
              Verify
            </button>
            <button id="btnResend" class="flex-1 py-3 rounded-full border border-slate-300 text-slate-700 bg-white">
              Resend
            </button>
          </div>
        </div>

        <p class="mt-10 text-sm text-slate-600 text-center">
          Already have an account?
          <a href="/login" class="font-semibold hover:underline">Sign In</a>
        </p>
      </div>
    </section>
  </div>
</body>
</html>
