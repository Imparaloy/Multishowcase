<div class="bg-[#182244] rounded-xl p-4 mb-4 text-white">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-gray-500 rounded-full"></div>
      <div>
        <span class="font-bold"><%= name %></span>
        <span class="text-gray-400 ml-1">@<%= username %></span>
      </div>
    </div>
    <div class="text-gray-400 cursor-pointer">•••</div>
  </div>

  <!-- Content -->
  <div class="mt-3 text-sm leading-relaxed text-gray-200"><%= content %></div>

  <!-- Actions -->
  <div class="flex justify-between mt-4 text-gray-400 text-sm">
    <div class="flex items-center space-x-1 cursor-pointer hover:text-white">
      <i data-feather="message-circle" class="w-4 h-4"></i>
      <span><%= comments %></span>
    </div>
    <div class="flex items-center space-x-1 cursor-pointer hover:text-white">
      <i data-feather="heart" class="w-4 h-4"></i>
      <span><%= likes %></span>
    </div>
    <div class="flex items-center space-x-1 cursor-pointer hover:text-white">
      <i data-feather="smile" class="w-4 h-4"></i>
      <span><%= reactions %></span>
    </div>
    <div class="flex items-center space-x-1 cursor-pointer hover:text-white">
      <i data-feather="bar-chart-2" class="w-4 h-4"></i>
      <span><%= views %></span>
    </div>
    <div class="cursor-pointer hover:text-white">
      <i data-feather="bookmark" class="w-4 h-4"></i>
    </div>
  </div>
</div>
