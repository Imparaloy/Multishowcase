<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Multi Showcase</title>
  <link href="/style.css" rel="stylesheet">
  <script src="https://unpkg.com/feather-icons"></script>
</head>
<body class="bg-[#0f1533] text-white font-sans">

  <div class="flex max-w-7xl mx-auto min-h-screen">

    <!-- Sidebar -->
    <%- include('components/sidebar') %>

    <!-- Feed -->
    <main class="w-3/5 border-x border-gray-700">
      <!-- Tabs -->
      <div class="flex justify-center border-b border-gray-700">
        <button class="w-1/2 py-3 text-center border-b-2 border-purple-400">For you</button>
        <button class="w-1/2 py-3 text-center text-gray-400 hover:text-white">Following</button>
      </div>

      <!-- New Post Box -->
      <div class="flex items-start space-x-3 p-4 border-b border-gray-700">
        <div class="w-10 h-10 bg-gray-500 rounded-full"></div>
        <div class="flex-1">
          <textarea placeholder="What's happening?" class="w-full bg-transparent text-sm resize-none outline-none"></textarea>
          <div class="flex justify-between items-center mt-2">
            <div class="flex space-x-4 text-gray-400">
              <i data-feather="image"></i>
              <i data-feather="tag"></i>
            </div>
            <button class="bg-purple-600 px-4 py-1 rounded-full text-sm hover:bg-purple-700">Post</button>
          </div>
        </div>
      </div>

      <!-- Feed Posts -->
      <div class="p-4 space-y-4">
        <% posts.forEach(post => { %>
          <%- include('components/post', post) %>
        <% }) %>
      </div>
    </main>

    <!-- Rightbar -->
    <%- include('components/rightbar') %>

  </div>

  <script>
    feather.replace()
  </script>
</body>
</html>
