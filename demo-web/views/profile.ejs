<!DOCTYPE html>
<html lang="en" class="h-full">
  <%- include('../partials/head') %>
  <body class="h-full bg-[#1F2544]">
    
    <main class="mx-auto max-w-[1200px] px-4 lg:px-6 grid grid-cols-12 gap-6">
      <!-- Left sidebar -->
      <%- include('../partials/leftside', { me, active: 'profile' }) %>
      <!-- Center -->
      <section class="col-span-12 md:col-span-6 card overflow-hidden p-0 md:border-x border-[#474F7A] min-h-svh">
        <header class="sticky top-0 z-20 bg-ink-900/80 backdrop-blur border-b border-white/10">
          <div class="max-w-[1200px] mx-auto px-4 lg:px-6 h-14 flex items-center gap-3">
            <button class="btn" aria-label="Back">←</button>
            <div class="font-semibold">Name</div>
          </div>
        </header>
        <!-- Cover -->
        <div class="h-32 bg-ink-800"></div>
      
        <!-- Avatar + Header -->
        <div class="px-4 -mt-10">
          <div class="flex items-end justify-between">
            <div class="w-28 h-28 rounded-full bg-white/20 border-4 border-ink-900"></div>
            <button id="editProfileBtn" class="btn border-1 rounded-full px-2 py-1">Edit Profile</button>
          </div>
      
          <div class="mt-3">
            <div class="text-lg font-semibold">
              <%= me.name %>
            </div>
            <div class="muted">@<%= me.username %>
            </div>
          </div>
      
          <div class="mt-4 flex gap-6 text-sm muted">
            <div><span class="text-white font-semibold">
                <%= me.following %>
              </span> Following</div>
            <div><span class="text-white font-semibold">
                <%= me.followers %>
              </span> Followers</div>
          </div>
      
          <!-- Tabs -->
          <div class="mt-4 border-b border-white/10 flex gap-6 text-sm">
            <button class="py-3 border-b-2 border-white font-semibold">Post</button>
            <button class="py-3 muted">Media</button>
            <button class="py-3 muted">Replies</button>
            <button class="py-3 muted">Likes</button>
          </div>
        </div>
      
        <!-- Posts -->
        <div>
          <%- include('../partials/postCard', { posts }) %>
        </div>
      </section>

      <!-- Right sidebar -->
      <%- include('../partials/rightside', { trending }) %>
    </main>

    <!-- include modal -->
    <%- include('../partials/modals/editProfile', { id: 'editProfileModal', title: 'Edit Profile' }) %>

    <!-- script ของ modal -->
    <script defer src="/js/modals/editProfile.js"></script>
  </body>
</html>
