<% const modalId = typeof id !== 'undefined' ? id : 'editProfileModal'; %>

<div id="<%= modalId %>" class="fixed inset-0 z-50 hidden">
  <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" data-backdrop></div>
  <div class="relative mx-auto max-w-3xl p-4">
    <div class="card overflow-hidden">
      <div class="flex items-center justify-between px-6 py-4 border-b border-white/10 bg-ink-800/60">
        <h2 class="text-base font-semibold"><%= title || 'Edit Profile' %></h2>
        <div class="flex items-center gap-2">
          <button class="btn h-9 px-3" data-cancel>Cancel</button>
          <button class="btn h-9 px-4 bg-white/10" data-save>Save</button>
        </div>
      </div>

      <div class="px-6 pt-6">
        <div class="relative rounded-2xl h-40 bg-[#2a3760] flex items-center justify-center text-white/80">
          <span class="text-2xl">ðŸ’¬</span>
          <div class="absolute -bottom-8 left-8 w-28 h-28 rounded-full border-4 border-ink-900 bg-white/20 shadow-soft"></div>
        </div>
      </div>

      <form class="px-6 pb-6 pt-12 space-y-5">
        <div>
          <label class="block text-sm mb-2">Name</label>
          <input class="w-full rounded-xl bg-ink-800 border border-white/10 px-4 h-12 outline-none focus:border-white/20" />
        </div>
        <div>
          <label class="block text-sm mb-2">Username</label>
          <input class="w-full rounded-xl bg-ink-800 border border-white/10 px-4 h-12 outline-none focus:border-white/20" />
        </div>
        <div>
          <label class="block text-sm mb-2">Bio</label>
          <textarea rows="4" class="w-full rounded-xl bg-ink-800 border border-white/10 p-4 outline-none focus:border-white/20"></textarea>
        </div>
      </form>
    </div>
  </div>
</div>
